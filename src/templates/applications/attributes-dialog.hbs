<form class="{{cssClass}}" autocomplete="off">
  <header class="dialog-header">
    <h1>{{actorData.name}}</h1>
  </header>
  <section class="dialog-body">
    <h2>{{ localize 'OQ.Labels.Attributes' }}</h2>
    <div class="attrs-table">
      <label></label>
      <label>{{ localize 'OQ.Dialog.Mod' }}</label>

      <label for="hpMod">{{ localize 'OQ.Labels.AttributesNames.hp.label'}}</label>
      <input id="hpMod" type="number" data-dtype="Number" name="attributes.hp.mod" value="{{system.attributes.hp.mod}}">

      <label for="mpMod">{{ localize 'OQ.Labels.AttributesNames.mp.label'}}</label>
      <input id="mpMod" type="number" data-dtype="Number" name="attributes.mp.mod" value="{{system.attributes.mp.mod}}">

      <label for="dmMod">{{ localize 'OQ.Labels.AttributesNames.dm.label'}}</label>
      <input id="dmMod" type="text" data-dtype="String" name="attributes.dm.mod" value="{{system.attributes.dm.mod}}">

      <label for="mrMod">{{ localize 'OQ.Labels.AttributesNames.mr.label'}}</label>
      <input id="mrMod" type="number" data-dtype="Number" name="attributes.mr.mod" value="{{system.attributes.mr.mod}}">

    </div>
  </section>
  <section class="dialog-body">
    <div class="flexrow">
      <button type="reset" class="reset"><i class="fas fa-cancel"></i> {{ localize 'OQ.Dialog.Reset' }} </button>
      <button type="submit"><i class="fas fa-save"></i> {{ localize 'OQ.Dialog.Save' }} </button>
    </div>
  </section>
</form>
