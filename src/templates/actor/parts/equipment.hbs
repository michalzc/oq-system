<div class="item item-to-drag" draggable="true" data-item-id="{{ id }}">
  <a class="item-to-chat">
    <img class="item-icon" src="{{img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{name}}">
  </a>
  <div class="item-roll" data-tooltip="{{system.tooltip}}" data-tooltip-direction="LEFT">{{name}}</div>

  {{#unless (eq system.type 'single')}}
    <div class="item-quantity">
      <a class="item-quantity-update" data-value="-1"><i class="fas fa-minus"></i></a>
      <input type="number" class="item-quantity-value" name="system.quantity" value="{{ system.quantity }}"
             data-tooltip="{{ localize 'OQ.Labels.Quantity' }}" />
      <a class="item-quantity-update" data-value="1"><i class="fas fa-plus"></i></a>
    </div>
  {{/unless}}

  {{#if showEq}}
    <a class="item-state item-state-equipment"
       data-tooltip="{{ localize (concat 'OQ.Labels.ItemStates.' system.state) }}">
      {{itemState system.state}}
    </a>
    <div class="cost-value" data-tooltip="{{ localize 'OQ.Labels.Cost' }}"> {{ consolidateFlat system.cost }}</div>
    <div class="short-value" data-tooltip="{{ localize 'OQ.Labels.Encumbrance' }}">
      {{#unless system.totalEncumbrance}}
        {{ system.encumberance }}
      {{/unless}}
      {{#if system.totalEncumbrance}}
        {{ formatNumber system.totalEncumbrance decimals=1 }}
      {{/if}}
    </div>
  {{/if}}
  <a class="item-edit"><i class="fas fa-edit"></i></a>
  <a class="item-delete"><i class="fas fa-trash"></i></a>
</div>
