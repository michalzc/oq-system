<div class="item">
  <a class="item-to-chat" data-item-id="{{id}}">
    <img class="item-icon" src="{{img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{name}}">
  </a>
  {{#if system.rollValues}}
    <a class="item-roll item-name" data-item-id="{{id}}" data-tooltip="{{system.tooltip}}" data-tooltip-direction="LEFT">
      {{name}}
    </a>
  {{else}}
    <div class="item-name" data-tooltip="{{system.tooltip}}" data-tooltip-direction="LEFT">{{name}}</div>
  {{/if}}
  <a class="item-state item-state-weapon" data-item-id="{{id}}"
     data-tooltip="{{ localize (concat 'OQ.Labels.ItemStates.' system.state) }}">
    {{itemState system.state}}
  </a>

  {{# if system.damageRollValue}}
    <a class="damage-roll" data-item-id="{{id}}" data-tooltip="{{localize 'OQ.Labels.DamageRoll' }}">
      <i class="fas fa-hammer-crash"></i> {{ system.damageRollValue }}
    </a>
  {{/if}}
  {{#if system.rollValues}}
    <a class="item-roll total-value" data-item-id="{{id}}" data-tooltip="{{localize 'OQ.Labels.Roll'}} {{name}}">
      {{system.rollValues.value}} %
    </a>
  {{else}}
    <div class="total-value"></div>
  {{/if}}
  <a class="item-edit" data-item-id="{{id}}"><i class="fas fa-edit"></i></a>
  <a class="item-delete" data-item-id="{{id}}"><i class="fas fa-trash"></i></a>
</div>
