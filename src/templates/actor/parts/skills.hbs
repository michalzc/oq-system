<div class="skills">
{{#each system.groupedSkills as |skills groupKey|}}
  <fieldset class="skill-group">
    <legend>{{ localize groupKey}}</legend>
    {{#each skills as |skill|}}
      <div class="skill">
        <a class="item-to-chat"><img class="item-icon" src="{{skill.img}}" title="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{skill.name}}"></a>
        <a class="item-roll">{{skill.name}}</a>
        <input name="skill.mod" class="skill-mod mod-value" data-item-id="{{skill.id}}" type="number" data-dtype="Number"
               value="{{skill.system.mod}}">
        <a class="item-roll total-value">{{skill.system.value}}%</a>
        <a class="item-edit" data-item-id="{{skill.id}}"><i class="fas fa-edit"></i></a>
        <a class="item-delete" data-item-id="{{skill.id}}"><i class="fas fa-trash"></i></a>
      </div>
    {{/each}}
  </fieldset>
{{/each}}
</div>
