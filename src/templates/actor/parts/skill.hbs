<div class="item">
  <a class="item-to-chat" data-item-id="{{id}}">
    <img class="item-icon" src="{{img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{name}}">
  </a>
  <div class="item-name">
    <a class="item-roll" data-item-id="{{id}}" data-tooltip="{{ system.tooltip }}" data-tooltip-direction="LEFT">
      {{name}}
    </a>
    {{#if system.rollValues.mastered}}
      <span data-tooltip="{{localize 'OQ.Labels.SkillMastered'}}"><i class="fa fa-badge-check"></i></span>
    {{/if}}
  </div>
  <input name="item.mod" class="item-mod mod-value" data-item-id="{{id}}" type="number" data-dtype="Number"
         value="{{system.advancement}}" data-tooltip="{{ localize 'OQ.Labels.Advances' }}">
  <a class="item-roll total-value" data-item-id="{{id}}"
     data-tooltip="{{localize 'OQ.Labels.Roll'}} {{name}}">{{system.rollValues.value}} {{#if
    system.rollValues.valueWithMod}}({{system.rollValues.valueWithMod}}){{/if}} %</a>
  <a class="item-edit" data-item-id="{{id}}"><i class="fas fa-edit"></i></a>
  <a class="item-delete" data-item-id="{{id}}"><i class="fas fa-trash"></i></a>
</div>
