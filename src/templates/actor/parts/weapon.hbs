<div class="item">
  <a class="item-to-chat" data-item-id="{{this.id}}">
    <img class="item-icon" src="{{this.img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{this.name}}">
  </a>
  {{#if this.isRollable}}
    <a class="item-roll" data-item-id="{{this.id}}"
       data-tooltip="{{localize 'OQ.Labels.Roll'}} {{this.name}}">
      {{this.name}}
    </a>
  {{else}}
    <span class="item-roll">{{this.name}}</span>
  {{/if}}

  <a class="damage-roll" data-item-id="{{this.id}}"
     data-tooltip="{{localize 'OQ.Labels.DamageRoll' }}">
    <i class="fas fa-hand-fist"></i> {{this.damageFormula }}
  </a>

  {{ log this.isRollable }}
  {{#if this.isRollable}}
    <a class="item-roll total-value" data-item-id="{{this.id}}"
       data-tooltip="{{localize 'OQ.Labels.Roll'}} {{this.name}}">
      {{this.rollValue}} %
    </a>
  {{/if}}
  <a class="item-edit" data-item-id="{{this.id}}"><i class="fas fa-edit"></i></a>
  <a class="item-delete" data-item-id="{{this.id}}"><i class="fas fa-trash"></i></a>
</div>
