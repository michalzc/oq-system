<div class="item item-to-drag" draggable="true" data-item-id="{{ id }}">
  <a class="item-to-chat">
    <img class="item-icon" src="{{img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{name}}">
  </a>
  {{#if system.rollValues}}
    <a class="item-roll item-name" data-tooltip="{{system.tooltip}}" data-tooltip-direction="LEFT">
      {{name}}
    </a>
  {{else}}
    <div class="item-name" data-tooltip="{{system.tooltip}}" data-tooltip-direction="LEFT">{{name}}</div>
  {{/if}}

  {{#if system.damageRollValues }}
    <a class="damage-roll" data-tooltip="{{localize 'OQ.Labels.DamageRoll' }}">
      {{ system.damageRollValues.finalDamageFormula }}
    </a>
  {{/if}}

  {{#if system.rollValues }}
    <a class="item-roll total-value" data-tooltip="{{localize 'OQ.Labels.Roll'}} {{name}}">
      {{ system.rollValues.value }} {{#if system.rollValues.valueWithMod}}({{system.rollValues.valueWithMod}}){{/if}} %
    </a>
  {{else}}
    <div class="total-value"></div>
  {{/if}}
  {{#if showEq}}
    <a class="item-state item-state-weapon"
       data-tooltip="{{ localize (concat 'OQ.Labels.ItemStates.' system.state) }}">
      {{itemState system.state}}
    </a>
    <div class="cost-value" data-tooltip="{{ localize 'OQ.Labels.Cost' }}"> {{ system.cost }}</div>
    <div class="short-value" data-tooltip="{{ localize 'OQ.Labels.Encumbrance' }}"> {{ system.encumbrance }}</div>
  {{/if}}
  <a class="item-edit"><i class="fas fa-edit"></i></a>
  <a class="item-delete"><i class="fas fa-trash"></i></a>
</div>
