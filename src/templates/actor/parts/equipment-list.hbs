<div class="items equipment">
  <div class="item-group">
    <div class="item">
      <label>{{ localize 'OQ.Labels.TotalEncumbrance' }}</label>
      <div>{{system.enc.totalEncumbrance}} / {{system.enc.maxEncumbrance}}</div>
    </div>
  </div>
  <fieldset class="item-group">
    <legend>{{ localize 'OQ.Labels.Weapons' }}</legend>
    {{#each system.groupedItems.weapons as |weapon|}}
      {{> systems/oq/templates/actor/parts/weapon.hbs weapon id=weapon.id showEq=true}}
    {{/each}}
  </fieldset>

  <fieldset class="item-group">
    <legend>{{ localize 'OQ.Labels.Armours' }}</legend>
    {{#each system.groupedItems.armours as |armour|}}
      {{> systems/oq/templates/actor/parts/armour.hbs armour id=armour.id showEq=true}}
    {{/each}}
  </fieldset>

  <fieldset class="item-group">
    <legend>{{ localize 'OQ.Nav.Equipment' }}</legend>
    {{#each system.groupedItems.equipment as |equipment|}}
      {{> systems/oq/templates/actor/parts/equipment.hbs equipment id=equipment.id showEq=true}}
    {{/each}}
  </fieldset>
</div>
