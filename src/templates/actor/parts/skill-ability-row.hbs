<div class="item">
  <a class="item-to-chat" data-item-id="{{this.id}}">
    <img class="item-icon" src="{{this.img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{this.name}}">
  </a>
  <a class="item-roll item-name" data-item-id="{{this.id}}"
     data-tooltip="{{localize 'OQ.Labels.Roll'}} {{this.name}}">{{this.name}}</a>
  {{#if this.system.mastered}}
    <span data-tooltip="{{localize 'OQ.Labels.SkillMastered'}}"><i class="fa fa-seal"></i></span>
  {{/if}}
  <input name="item.mod" class="item-mod mod-value" data-item-id="{{this.id}}" type="number" data-dtype="Number"
         value="{{this.system.mod}}" data-tooltip="{{ localize 'OQ.Labels.Advances' }}">
  <a class="item-roll total-value" data-item-id="{{this.id}}"
     data-tooltip="{{localize 'OQ.Labels.Roll'}} {{this.name}}">{{this.system.value}} %</a>
  <a class="item-edit" data-item-id="{{this.id}}"><i class="fas fa-edit"></i></a>
  <a class="item-delete" data-item-id="{{this.id}}"><i class="fas fa-trash"></i></a>
</div>
