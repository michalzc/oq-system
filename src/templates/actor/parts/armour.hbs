<div class="item">
  <a class="item-to-chat" data-item-id="{{this.id}}">
    <img class="item-icon" src="{{this.img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{this.name}}">
  </a>
  <div class="item-roll">{{this.name}}</div>
  <a class="item-state item-state-armour" data-item-id="{{this.id}}"
     data-tooltip="{{ localize (concat 'OQ.Labels.ItemStates.' this.system.state) }}">
    {{itemState this.system.state}}
  </a>
  <div class="total-value" data-dtype="{{localize 'OQ.Labels.ArmourPoints'}}">{{this.system.ap}}</div>
  <a class="item-edit" data-item-id="{{this.id}}"><i class="fas fa-edit"></i></a>
  <a class="item-delete" data-item-id="{{this.id}}"><i class="fas fa-trash"></i></a>
</div>
