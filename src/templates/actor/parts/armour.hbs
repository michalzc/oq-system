<div class="item item-to-drag" draggable="true" data-item-id="{{ id }}">
  <a class="item-to-chat">
    <img class="item-icon" src="{{img}}" data-tooltip="{{localize 'OQ.Tooltips.SendToChat'}}" alt="{{name}}">
  </a>
  <span class="item-roll" data-tooltip="{{tooltip}}" data-tooltip-direction="LEFT">{{name}}</span>

  <span class="short-value" data-dtype="{{localize 'OQ.Labels.ArmourPoints'}}" data-tooltip="{{ localize 'OQ.Labels.Protection' }}">{{system.ap}}</span>
  {{#if showEq}}
    <a class="item-state item-state-armour"
       data-tooltip="{{ localize (concat 'OQ.Labels.ItemStates.' system.state) }}">
      {{itemState system.state}}
    </a>
    <div class="cost-value" data-tooltip="{{ localize 'OQ.Labels.Cost' }}"> {{ system.cost }}</div>
    <div class="short-value" data-tooltip="{{ localize 'OQ.Labels.Encumbrance' }}"> {{ system.encumbrance }}</div>
  {{/if}}
  <a class="item-edit"><i class="fas fa-edit"></i></a>
  <a class="item-delete"><i class="fas fa-trash"></i></a>
</div>
